{
  "version": "1.0.4",
  "lastUpdated": "2025-11-23T12:00:00Z",
  "structure": {
    "core": ["project", "tech-stack", "git", "issues", "env", "session"],
    "architecture": ["patterns", "folder-structure", "dependencies"],
    "standards": ["naming", "formatting", "imports", "testing"],
    "modules": [
      "auth",
      "api",
      "ui",
      "database",
      "admin",
      "payment",
      "fulfillment"
    ],
    "files": {
      "components": [
        "Button",
        "AdminLayout",
        "InventoryManagement",
        "OrderManagementView",
        "PaymentQRCode",
        "FulfillmentFlow"
      ],
      "services": [
        "types",
        "db",
        "test-db",
        "sepay-service",
        "fulfillment-service",
        "resend-service",
        "encryption-service"
      ],
      "utils": ["helpers", "auth-helpers", "encryption"],
      "config": [
        "tsconfig",
        "eslint",
        "prettier",
        "components",
        "vercel",
        "vercelignore",
        "gitignore"
      ],
      "prisma": ["schema", "migrations"],
      "generated": ["prisma-client"]
    }
  },
  "loadingRules": {
    "always": ["core/project", "core/tech-stack"],
    "onDemand": {
      "coding": [
        "standards/naming",
        "standards/formatting",
        "standards/imports"
      ],
      "testing": ["standards/testing"],
      "newComponent": ["modules/ui", "standards/naming"],
      "apiWork": ["modules/api", "files/services/types"],
      "authWork": ["modules/auth"],
      "initialization": ["core/git", "core/env", "core/session"],
      "dbInit": [
        "modules/database",
        "files/services/db",
        "files/prisma/schema"
      ],
      "adminWork": ["modules/admin", "files/utils/auth-helpers"],
      "paymentWork": [
        "modules/payment",
        "files/services/sepay-service",
        "files/services/encryption-service"
      ],
      "fulfillmentWork": [
        "modules/fulfillment",
        "files/services/fulfillment-service",
        "files/services/resend-service"
      ]
    }
  }
}
