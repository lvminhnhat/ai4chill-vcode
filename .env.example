# Environment Variables Example
# Copy this file to .env and fill in your actual values

# Database Configuration (Required)
# PostgreSQL connection string for Prisma ORM
DATABASE_URL="postgresql://postgres.[PROJECT_ID]:[YOUR-PASSWORD]@aws-1-ap-southeast-2.pooler.supabase.com:5432/postgres"

# Next.js Configuration
NEXTAUTH_URL="https://your-domain.vercel.app"
NEXTAUTH_SECRET="[YOUR_NEXTAUTH_SECRET]"

# Vercel Analytics (Optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="[YOUR_VERCEL_ANALYTICS_ID]"

# Application Configuration
NODE_ENV="production"

# Feature Flags
# Set to 'true' to use mock data instead of real API
NEXT_PUBLIC_USE_MOCK_DATA="true"

# Cookie Configuration (Optional)
# Only needed if using subdomains
# COOKIE_DOMAIN=".yourdomain.com"

# Encryption Configuration (Required)
# 32-byte hex string for AES-256-GCM encryption
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="[YOUR_32_BYTE_HEX_ENCRYPTION_KEY]"
# Example for development (NOT for production):
# ENCRYPTION_KEY="a1b2c3d4e5f6789012345678901234567890abcdef1234567890abcdef123456"

# Sepay Payment Gateway Configuration (Required)
# Your Sepay account information for QR code generation
SEPAY_ACCOUNT_NUMBER="[YOUR_SEPAY_ACCOUNT_NUMBER]"
SEPAY_ACCOUNT_NAME="[YOUR_BUSINESS_NAME]"
SEPAY_BANK_CODE="MB"  # MB Bank, VCB (Vietcombank), TCB (Techcombank), etc.

# Sepay Webhook Configuration (Optional but recommended)
# Secret key for webhook signature validation (if Sepay provides)
SEPAY_WEBHOOK_SECRET="[YOUR_SEPAY_WEBHOOK_SECRET]"

# Sepay IP Whitelist (Optional but recommended)
# Comma-separated list of allowed IP addresses for webhooks
# Example: "103.56.158.0/24,103.57.240.0/24"
SEPAY_ALLOWED_IPS=""
