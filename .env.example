# Environment Variables Example
# Copy this file to .env and fill in your actual values

# Database Configuration (Required)
# PostgreSQL connection string for Prisma ORM
DATABASE_URL="postgresql://postgres.[PROJECT_ID]:[YOUR-PASSWORD]@aws-1-ap-southeast-2.pooler.supabase.com:5432/postgres"

# Next.js Configuration
NEXTAUTH_URL="https://your-domain.vercel.app"
NEXTAUTH_SECRET="[YOUR_NEXTAUTH_SECRET]"

# Vercel Analytics (Optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="[YOUR_VERCEL_ANALYTICS_ID]"

# Application Configuration
NODE_ENV="production"

# Feature Flags
# Set to 'true' to use mock data instead of real API
NEXT_PUBLIC_USE_MOCK_DATA="true"

# Cookie Configuration (Optional)
# Only needed if using subdomains
# COOKIE_DOMAIN=".yourdomain.com"

# Encryption for account credentials (Task #6)
# 64-character hex string for AES-256-GCM encryption
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="your_64_character_hex_encryption_key_here"

# SePay Payment Gateway (Official SDK)
# REQUIRED in production
SEPAY_MERCHANT_ID=your_merchant_id
SEPAY_SECRET_KEY=your_merchant_secret_key
SEPAY_ENV=sandbox # sandbox | production

# Webhook Security (REQUIRED in production)
# Generate with: openssl rand -hex 32
SEPAY_WEBHOOK_SECRET=your_webhook_secret_here

# IP Whitelist for Webhook (HIGHLY RECOMMENDED)
# Comma-separated list of allowed IPs or CIDR blocks
# Contact SePay support for their webhook IP ranges
SEPAY_ALLOWED_IPS=103.56.158.0/24,103.57.240.0/24

# WARNING: Production deployment without SEPAY_WEBHOOK_SECRET and SEPAY_ALLOWED_IPS
# is a CRITICAL security vulnerability that could lead to payment fraud!

# Email Delivery (Task #9)
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=noreply@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com



# Payment Callback URLs
NEXT_PUBLIC_SUCCESS_URL=/payment/success
NEXT_PUBLIC_ERROR_URL=/payment/error
NEXT_PUBLIC_CANCEL_URL=/payment/cancel
